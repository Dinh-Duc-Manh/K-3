@model IEnumerable<Project3.Models.OrderDetail>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetailStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Orders)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDetailStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Orders.ReceiverName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.OrderDetailId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.OrderDetailId">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
