@model Project3.Models.OrderDetail

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Edit</h1>

<h4>OrderDetail</h4>
<hr />
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="OrderDetailId" />
    <div class="form-group">
        <label asp-for="OrderDetailStatus" class="control-label"></label>
        <select asp-for="OrderDetailStatus" class="form-control">
            <option value="The order has been placed">The order has been placed</option>
            <option value="Order is being prepared">Order is being prepared</option>
            <option value="Order is being shipped">Order is being shipped</option>
            <option value="The order has been delivered successfully">The order has been delivered successfully</option>
        </select>
    </div>
    <input type="hidden" asp-for="OrdersId" />
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
